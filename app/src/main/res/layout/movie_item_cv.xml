<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/movieCV"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/movieCV_titleTV"

            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Pulp Fiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/movieCV_descriptionTV"

            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="A fearless group of warriors who got to great lengths to intimidate there foes"
            app:layout_constraintTop_toBottomOf="@id/movieCV_titleTV"
            app:layout_constraintLeft_toLeftOf="@id/movieCV_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton android:id="@+id/movieCV_deleteButton"

            android:textSize="18sp"
            android:paddingStart="0dp"
            android:textAlignment="viewStart"
            android:text="Delete"
            app:layout_constraintLeft_toLeftOf="@id/movieCV_titleTV"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/movieCV_wasWatchedTV"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:text="Watched!"
            app:layout_constraintTop_toTopOf="@id/movieCV_wasWatchedBttn"
            app:layout_constraintBottom_toBottomOf="@id/movieCV_wasWatchedBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/movieCV_wasWatchedBttn"/>

        <ImageButton android:id="@+id/movieCV_wasWatchedBttn"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src= "@drawable/ic_visibility_black_24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>